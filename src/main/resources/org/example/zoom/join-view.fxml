<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<StackPane xmlns:fx="http://javafx.com/fxml"
           fx:controller="org.example.zoom.JoinController"
           prefWidth="400" prefHeight="300"
           style="-fx-background-color: #f0f4f7;">

    <VBox alignment="CENTER" spacing="20"
          style="-fx-background-color: white; -fx-padding: 30; -fx-background-radius: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 10,0,0,6);"
          maxWidth="350">

        <!-- Title -->
        <Label text="Join a Meeting" style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

        <!-- Meeting ID -->
        <TextField fx:id="meetingIdField" promptText="Enter Meeting ID"
                   style="-fx-background-radius: 10; -fx-padding: 10; -fx-font-size: 16px;"/>

        <!-- Name -->
        <TextField fx:id="nameField" promptText="Enter Your Name"
                   style="-fx-background-radius: 10; -fx-padding: 10; -fx-font-size: 16px;"/>

        <!-- Buttons -->
        <HBox alignment="CENTER" spacing="15">
            <Button text="Join" onAction="#onJoinMeetingClick"
                    style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-size: 16px; -fx-background-radius: 10; -fx-padding: 10 20;"/>
            <Button text="Cancel" onAction="#onCancelClick"
                    style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-size: 16px; -fx-background-radius: 10; -fx-padding: 10 20;"/>
        </HBox>

        <!-- Status Message -->
        <Label fx:id="statusLabel" style="-fx-text-fill: #e67e22; -fx-font-size: 14px;"/>

    </VBox>
</StackPane>
