<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane xmlns:fx="http://javafx.com/fxml"
           fx:controller="org.example.zoom.NewMeetingController"
           prefWidth="400" prefHeight="300"
           style="-fx-background-color: #f0f4f7;">

    <VBox alignment="CENTER" spacing="20"
          style="-fx-background-color: white; -fx-padding: 30; -fx-background-radius: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 10,0,0,6);"
          maxWidth="350">

        <!-- Title -->
        <Label text="New Meeting" style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

        <!-- Meeting ID Display -->
        <Label text="Your Meeting ID:" style="-fx-font-size: 16px; -fx-text-fill: #34495e;"/>
        <TextField fx:id="meetingIdField" editable="false"
                   style="-fx-background-radius: 10; -fx-padding: 10; -fx-font-size: 18px; -fx-text-fill: #2c3e50; -fx-font-weight: bold;"/>

        <!-- Buttons -->
        <HBox alignment="CENTER" spacing="15">
            <Button text="Start Meeting" onAction="#onStartMeetingClick"
                    style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-size: 16px; -fx-background-radius: 10; -fx-padding: 10 20;"/>
            <Button text="Back" onAction="#onBackClick"
                    style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-size: 16px; -fx-background-radius: 10; -fx-padding: 10 20;"/>
        </HBox>

        <!-- Status Message -->
        <Label fx:id="statusLabel" style="-fx-text-fill: #2980b9; -fx-font-size: 14px;"/>

    </VBox>
</StackPane>
