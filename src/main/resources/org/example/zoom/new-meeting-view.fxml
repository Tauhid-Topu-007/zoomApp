<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<ScrollPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.zoom.NewMeetingController"
            fx:id="mainScrollPane"
            style="-fx-background: #2c3e50; -fx-border-color: #2c3e50;"
            fitToWidth="true" fitToHeight="true"
            hbarPolicy="NEVER" vbarPolicy="AS_NEEDED">

    <content>
        <VBox alignment="CENTER" spacing="30"
              style="-fx-background-color: #2c3e50; -fx-padding: 40; -fx-min-width: 500;">

            <!-- Main Card -->
            <VBox alignment="CENTER" spacing="30"
                  style="-fx-background-color: #34495e; -fx-padding: 40; -fx-background-radius: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 20,0,0,10);"
                  maxWidth="460">

                <!-- Header -->
                <VBox alignment="CENTER" spacing="15">
                    <Label text="ðŸš€ New Meeting" style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: white;"/>
                    <Label text="Create and manage your meeting session" style="-fx-font-size: 16px; -fx-text-fill: #ecf0f1; -fx-alignment: CENTER;"/>
                </VBox>

                <!-- Meeting ID Card -->
                <VBox spacing="25" alignment="CENTER"
                      style="-fx-background-color: #2c3e50; -fx-padding: 25; -fx-background-radius: 15; -fx-border-color: #3498db; -fx-border-width: 2; -fx-border-radius: 15;">

                    <Label text="ðŸ“‹ Meeting Identification" style="-fx-font-size: 20px; -fx-text-fill: white; -fx-font-weight: bold;"/>

                    <VBox spacing="15" alignment="CENTER">
                        <Label text="Meeting ID:" style="-fx-text-fill: #bdc3c7; -fx-font-size: 14px; -fx-font-weight: bold;"/>
                        <TextField fx:id="meetingIdField" editable="false"
                                   style="-fx-background-radius: 10; -fx-padding: 20; -fx-font-size: 24px; -fx-text-fill: white; -fx-font-weight: bold; -fx-alignment: center; -fx-background-color: #2c3e50; -fx-border-color: #3498db; -fx-border-width: 3; -fx-pref-width: 320;"/>
                    </VBox>

                    <HBox alignment="CENTER" spacing="20">
                        <Button text="ðŸ“‹ Copy ID" onAction="#onCopyIdClick"
                                style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-background-radius: 8; -fx-padding: 12 25; -fx-effect: dropshadow(gaussian, rgba(52,152,219,0.5), 5,0,0,3);"/>
                        <Button text="ðŸ“¤ Share All" onAction="#onShareInstructionsClick"
                                style="-fx-background-color: #9b59b6; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-background-radius: 8; -fx-padding: 12 25; -fx-effect: dropshadow(gaussian, rgba(155,89,182,0.5), 5,0,0,3);"/>
                    </HBox>
                </VBox>

                <!-- Quick Actions -->
                <VBox spacing="20" alignment="CENTER">
                    <Label text="âš¡ Quick Actions" style="-fx-font-size: 20px; -fx-text-fill: white; -fx-font-weight: bold;"/>

                    <HBox alignment="CENTER" spacing="20">
                        <VBox spacing="10" alignment="CENTER" style="-fx-padding: 20; -fx-background-color: #27ae60; -fx-background-radius: 12;">
                            <Label text="ðŸŽ¬" style="-fx-font-size: 24px; -fx-text-fill: white;"/>
                            <Button text="Start Meeting" onAction="#onStartMeetingClick"
                                    style="-fx-background-color: white; -fx-text-fill: #27ae60; -fx-font-weight: bold; -fx-background-radius: 8; -fx-padding: 12 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 5,0,0,3);"/>
                            <Label text="Begin session" style="-fx-text-fill: white; -fx-font-size: 11px;"/>
                        </VBox>

                        <VBox spacing="10" alignment="CENTER" style="-fx-padding: 20; -fx-background-color: #f39c12; -fx-background-radius: 12;">
                            <Label text="ðŸ§ª" style="-fx-font-size: 24px; -fx-text-fill: white;"/>
                            <Button text="Test Join" onAction="#onTestJoinClick"
                                    style="-fx-background-color: white; -fx-text-fill: #f39c12; -fx-font-weight: bold; -fx-background-radius: 8; -fx-padding: 12 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 5,0,0,3);"/>
                            <Label text="Verify joining" style="-fx-text-fill: white; -fx-font-size: 11px;"/>
                        </VBox>
                    </HBox>
                </VBox>

                <!-- Status Display -->
                <VBox alignment="CENTER" spacing="10"
                      style="-fx-padding: 20; -fx-background-color: #3498db; -fx-background-radius: 12; -fx-border-color: #2980b9; -fx-border-width: 1; -fx-border-radius: 12;">
                    <Label text="ðŸ“Š Status" style="-fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold;"/>
                    <Label fx:id="statusLabel"
                           style="-fx-text-fill: white; -fx-font-size: 14px; -fx-wrap-text: true; -fx-alignment: center; -fx-font-weight: bold;"
                           maxWidth="380" prefHeight="60"/>
                </VBox>

                <!-- Detailed Instructions -->
                <VBox spacing="20" alignment="CENTER"
                      style="-fx-padding: 25; -fx-background-color: #2c3e50; -fx-background-radius: 15;">

                    <Label text="ðŸ“š Complete Guide" style="-fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold;"/>

                    <GridPane hgap="15" vgap="10" alignment="CENTER">
                        <columnConstraints>
                            <ColumnConstraints prefWidth="30"/>
                            <ColumnConstraints prefWidth="350"/>
                        </columnConstraints>

                        <rowConstraints>
                            <RowConstraints prefHeight="35"/>
                            <RowConstraints prefHeight="35"/>
                            <RowConstraints prefHeight="35"/>
                            <RowConstraints prefHeight="35"/>
                            <RowConstraints prefHeight="35"/>
                        </rowConstraints>

                        <!-- Step 1 -->
                        <Label text="1." style="-fx-text-fill: #3498db; -fx-font-weight: bold; -fx-font-size: 14px;" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                        <Label text="Copy the Meeting ID using the button above" style="-fx-text-fill: #ecf0f1; -fx-font-size: 13px;" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                        <!-- Step 2 -->
                        <Label text="2." style="-fx-text-fill: #3498db; -fx-font-weight: bold; -fx-font-size: 14px;" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                        <Label text="Share the ID with participants via email, chat, or message" style="-fx-text-fill: #ecf0f1; -fx-font-size: 13px;" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                        <!-- Step 3 -->
                        <Label text="3." style="-fx-text-fill: #3498db; -fx-font-weight: bold; -fx-font-size: 14px;" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                        <Label text="Participants join using the Join Meeting page with this ID" style="-fx-text-fill: #ecf0f1; -fx-font-size: 13px;" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                        <!-- Step 4 -->
                        <Label text="4." style="-fx-text-fill: #3498db; -fx-font-weight: bold; -fx-font-size: 14px;" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                        <Label text="Click Start Meeting when all participants are ready" style="-fx-text-fill: #ecf0f1; -fx-font-size: 13px;" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                        <!-- Step 5 -->
                        <Label text="5." style="-fx-text-fill: #3498db; -fx-font-weight: bold; -fx-font-size: 14px;" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                        <Label text="Manage audio/video controls in the meeting interface" style="-fx-text-fill: #ecf0f1; -fx-font-size: 13px;" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
                    </GridPane>
                </VBox>

                <!-- Navigation -->
                <HBox alignment="CENTER" spacing="20">
                    <Button text="ðŸ  Dashboard" onAction="#onBackClick"
                            style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-background-radius: 8; -fx-padding: 12 25; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 5,0,0,3);"/>
                    <Button text="âŒ Cancel" onAction="#onBackClick"
                            style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-background-radius: 8; -fx-padding: 12 25; -fx-effect: dropshadow(gaussian, rgba(231,76,60,0.5), 5,0,0,3);"/>
                </HBox>

            </VBox>

            <!-- Footer Information -->
            <VBox alignment="CENTER" spacing="8" style="-fx-padding: 20 0 0 0;">
                <Label text="ðŸ’¡ Professional Tip: Test the joining process before your actual meeting" style="-fx-text-fill: #bdc3c7; -fx-font-size: 12px; -fx-font-style: italic; -fx-alignment: CENTER;"/>
                <Label text="Zoom Multi-Device Platform v1.0 | Secure WebSocket Communication" style="-fx-text-fill: #95a5a6; -fx-font-size: 10px;"/>
            </VBox>

        </VBox>
    </content>
</ScrollPane>