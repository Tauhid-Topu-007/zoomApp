<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.image.ImageView?>

<VBox fx:id="videoContainer" xmlns="http://javafx.com/javafx/17.0.2" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.zoom.VideoControlsController"
      spacing="15" style="-fx-background-color: #2c3e50; -fx-padding: 20; -fx-border-color: #34495e; -fx-border-width: 2; -fx-border-radius: 10; -fx-background-radius: 10;">

    <Label text="Video Controls" style="-fx-text-fill: white; -fx-font-size: 18; -fx-font-weight: bold;">
        <font>
            <Font name="System Bold" size="18.0" />
        </font>
    </Label>

    <Label fx:id="videoStatusLabel" text="Video: Off ðŸ”´" style="-fx-text-fill: #7f8c8d; -fx-font-weight: bold; -fx-font-size: 14;"/>

    <!-- Video Preview Container -->
    <StackPane fx:id="videoPreviewContainer" style="-fx-background-color: #1a1a1a; -fx-border-color: #34495e; -fx-border-width: 1; -fx-border-radius: 5;">
        <VBox.margin>
            <Insets bottom="10.0" />
        </VBox.margin>
    </StackPane>

    <HBox fx:id="videoControlsBox" spacing="10" alignment="CENTER">
        <Button fx:id="videoToggleButton" text="Start Video" onAction="#toggleVideo"
                prefWidth="120" prefHeight="40"
                style="-fx-background-radius: 5; -fx-font-weight: bold;"/>

        <Button fx:id="screenshotButton" text="Screenshot" onAction="#takeScreenshot"
                prefWidth="100" prefHeight="40"
                style="-fx-background-radius: 5; -fx-font-weight: bold;"/>

        <Button fx:id="recordButton" text="Start Recording" onAction="#toggleRecording"
                prefWidth="130" prefHeight="40"
                style="-fx-background-radius: 5; -fx-font-weight: bold;"/>
    </HBox>

    <Separator style="-fx-background-color: #34495e;"/>

    <!-- Camera and Quality Settings -->
    <HBox spacing="15" alignment="CENTER_LEFT">
        <VBox spacing="5">
            <Label text="Camera:" style="-fx-text-fill: white; -fx-font-weight: bold;"/>
            <ComboBox fx:id="cameraComboBox" prefWidth="150"/>
        </VBox>

        <VBox spacing="5">
            <Label text="Quality:" style="-fx-text-fill: white; -fx-font-weight: bold;"/>
            <ComboBox fx:id="qualityComboBox" prefWidth="120"/>
        </VBox>
    </HBox>

    <!-- Virtual Background -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <CheckBox fx:id="virtualBackgroundCheckBox" text="Virtual Background"
                  style="-fx-text-fill: white; -fx-font-weight: bold;"/>
    </HBox>

    <Separator style="-fx-background-color: #34495e;"/>

    <VBox spacing="5" style="-fx-padding: 10 0 0 0;">
        <Label text="Quick Tips:" style="-fx-text-fill: #bdc3c7; -fx-font-weight: bold;"/>
        <Label text="â€¢ Start Video: Turn on your camera" style="-fx-text-fill: #95a5a6; -fx-font-size: 12;"/>
        <Label text="â€¢ Screenshot: Capture current video frame" style="-fx-text-fill: #95a5a6; -fx-font-size: 12;"/>
        <Label text="â€¢ Recording: Record meeting video" style="-fx-text-fill: #95a5a6; -fx-font-size: 12;"/>
        <Label text="â€¢ Virtual Background: Blur or replace background" style="-fx-text-fill: #95a5a6; -fx-font-size: 12;"/>
    </VBox>
</VBox>