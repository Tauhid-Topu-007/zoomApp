<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox fx:id="audioContainer" xmlns="http://javafx.com/javafx/17.0.2" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.zoom.AudioControlsController"
      spacing="15" style="-fx-background-color: #2c3e50; -fx-padding: 20; -fx-border-color: #34495e; -fx-border-width: 2; -fx-border-radius: 10; -fx-background-radius: 10;">

    <Label text="Audio Controls" style="-fx-text-fill: white; -fx-font-size: 18; -fx-font-weight: bold;">
        <font>
            <Font name="System Bold" size="18.0" />
        </font>
    </Label>

    <Label fx:id="audioStatusLabel" text="Audio: Normal ðŸ”Š" style="-fx-text-fill: #27ae60; -fx-font-weight: bold; -fx-font-size: 14;"/>

    <HBox fx:id="audioControlsBox" spacing="10" alignment="CENTER">
        <Button fx:id="audioToggleButton" text="Mute" onAction="#toggleAudio"
                prefWidth="100" prefHeight="40"
                style="-fx-background-radius: 5; -fx-font-weight: bold;"/>

        <Button fx:id="muteAllButton" text="Mute All" onAction="#toggleMuteAll"
                prefWidth="100" prefHeight="40"
                style="-fx-background-radius: 5; -fx-font-weight: bold;"/>

        <Button fx:id="deafenButton" text="Deafen" onAction="#toggleDeafen"
                prefWidth="100" prefHeight="40"
                style="-fx-background-radius: 5; -fx-font-weight: bold;"/>
    </HBox>

    <Separator style="-fx-background-color: #34495e;"/>

    <!-- Audio Settings -->
    <VBox spacing="10">
        <Label text="Audio Settings" style="-fx-text-fill: white; -fx-font-weight: bold;"/>

        <HBox spacing="15" alignment="CENTER_LEFT">
            <VBox spacing="5">
                <Label text="Microphone:" style="-fx-text-fill: white; -fx-font-weight: bold;"/>
                <ComboBox fx:id="microphoneComboBox" prefWidth="150"/>
            </VBox>

            <VBox spacing="5">
                <Label text="Speaker:" style="-fx-text-fill: white; -fx-font-weight: bold;"/>
                <ComboBox fx:id="speakerComboBox" prefWidth="150"/>
            </VBox>
        </HBox>

        <VBox spacing="5">
            <Label text="Microphone Volume:" style="-fx-text-fill: white; -fx-font-weight: bold;"/>
            <Slider fx:id="microphoneSlider" min="0" max="100" value="80" showTickLabels="true" showTickMarks="true"
                    majorTickUnit="20" blockIncrement="10" prefWidth="200"/>
        </VBox>

        <VBox spacing="5">
            <Label text="Speaker Volume:" style="-fx-text-fill: white; -fx-font-weight: bold;"/>
            <Slider fx:id="speakerSlider" min="0" max="100" value="80" showTickLabels="true" showTickMarks="true"
                    majorTickUnit="20" blockIncrement="10" prefWidth="200"/>
        </VBox>
    </VBox>

    <Separator style="-fx-background-color: #34495e;"/>

    <Button text="Audio Test" onAction="#testAudio"
            style="-fx-background-color: #9b59b6; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;"
            prefWidth="120" prefHeight="35">
        <graphic>
            <Label text="ðŸ”Š" style="-fx-text-fill: white;"/>
        </graphic>
    </Button>

    <VBox spacing="5" style="-fx-padding: 10 0 0 0;">
        <Label text="Quick Tips:" style="-fx-text-fill: #bdc3c7; -fx-font-weight: bold;"/>
        <Label text="â€¢ Mute: Toggle your microphone" style="-fx-text-fill: #95a5a6; -fx-font-size: 12;"/>
        <Label text="â€¢ Mute All: Host can mute all participants" style="-fx-text-fill: #95a5a6; -fx-font-size: 12;"/>
        <Label text="â€¢ Deafen: Mute all incoming audio" style="-fx-text-fill: #95a5a6; -fx-font-size: 12;"/>
        <Label text="â€¢ Green: Audio normal | Orange: Muted | Red: Deafened" style="-fx-text-fill: #95a5a6; -fx-font-size: 12;"/>
    </VBox>
</VBox>