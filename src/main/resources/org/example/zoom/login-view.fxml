<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.text.*?>

<ScrollPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.zoom.LoginController"
            fx:id="mainScrollPane"
            style="-fx-background: #2c3e50; -fx-border-color: #2c3e50;"
            fitToWidth="true" fitToHeight="true"
            hbarPolicy="NEVER" vbarPolicy="AS_NEEDED">

    <content>
        <VBox alignment="CENTER" spacing="30"
              style="-fx-background-color: #2c3e50; -fx-padding: 40; -fx-min-width: 500;">

            <!-- App Logo -->
            <VBox alignment="CENTER" spacing="15">
                <ImageView fitWidth="120" fitHeight="120">
                    <image>
                        <Image url="https://i.pinimg.com/736x/05/d2/05/05d205464c8843564b3c6a8873083ea8.jpg"/>
                    </image>
                </ImageView>
                <Label text="Zoom Multi-Device" style="-fx-text-fill: white; -fx-font-size: 28px; -fx-font-weight: bold;"/>
                <Label text="Connect and collaborate seamlessly" style="-fx-text-fill: #bdc3c7; -fx-font-size: 14px;"/>
            </VBox>

            <!-- Connection Status Banner -->
            <VBox alignment="CENTER" spacing="10"
                  style="-fx-background-color: #34495e; -fx-padding: 20; -fx-background-radius: 15; -fx-min-width: 400;">
                <Label text="ðŸ”— Connection Status" style="-fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold;"/>
                <Label fx:id="connectionStatusLabel" text="ðŸ”´ Not Connected"
                       style="-fx-text-fill: #e74c3c; -fx-font-size: 14px; -fx-font-weight: bold;"/>
                <Label fx:id="serverInfoLabel" text="localhost:8887"
                       style="-fx-text-fill: #bdc3c7; -fx-font-size: 12px;"/>
            </VBox>

            <!-- Login Form -->
            <VBox alignment="CENTER" spacing="25"
                  style="-fx-background-color: #34495e; -fx-padding: 30; -fx-background-radius: 15; -fx-min-width: 400;">

                <Label text="Welcome Back!" style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold;"/>

                <!-- Username Field -->
                <VBox spacing="8">
                    <Label text="Username" style="-fx-text-fill: #ecf0f1; -fx-font-size: 12px; -fx-font-weight: bold;"/>
                    <HBox alignment="CENTER_LEFT" spacing="10"
                          style="-fx-background-color: #2c3e50; -fx-background-radius: 8; -fx-padding: 5;">
                        <Label text="ðŸ‘¤" style="-fx-text-fill: #bdc3c7; -fx-font-size: 16px; -fx-padding: 0 10 0 10;"/>
                        <TextField fx:id="usernameField" promptText="Enter your username"
                                   style="-fx-background-color: transparent; -fx-text-fill: white; -fx-prompt-text-fill: #95a5a6; -fx-border-width: 0;"
                                   onAction="#onUsernameEnter"/>
                    </HBox>
                </VBox>

                <!-- Password Field -->
                <VBox spacing="8">
                    <Label text="Password" style="-fx-text-fill: #ecf0f1; -fx-font-size: 12px; -fx-font-weight: bold;"/>
                    <HBox alignment="CENTER_LEFT" spacing="10"
                          style="-fx-background-color: #2c3e50; -fx-background-radius: 8; -fx-padding: 5;">
                        <Label text="ðŸ”’" style="-fx-text-fill: #bdc3c7; -fx-font-size: 16px; -fx-padding: 0 10 0 10;"/>
                        <PasswordField fx:id="passwordField" promptText="Enter your password"
                                       style="-fx-background-color: transparent; -fx-text-fill: white; -fx-prompt-text-fill: #95a5a6; -fx-border-width: 0;"
                                       onAction="#onPasswordEnter"/>
                    </HBox>
                </VBox>

                <!-- Remember Me & Forgot Password -->
                <HBox alignment="CENTER" spacing="80">
                    <CheckBox fx:id="rememberMe" text="Remember Me"
                              style="-fx-text-fill: #ecf0f1; -fx-font-size: 12px;"
                              onAction="#onRememberMeChanged"/>
                    <Button text="Forgot Password?" onAction="#onForgotPasswordClick"
                            style="-fx-background-color: transparent; -fx-text-fill: #3498db; -fx-font-size: 12px; -fx-border-width: 0; -fx-cursor: hand;"/>
                </HBox>

                <!-- Main Action Buttons -->
                <VBox alignment="CENTER" spacing="15" style="-fx-padding: 10 0 0 0;">
                    <Button text="Login" onAction="#onLoginClick"
                            style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14px; -fx-pref-width: 200; -fx-pref-height: 40; -fx-background-radius: 8;"/>
                    <Button text="Create Account" onAction="#onRegisterClick"
                            style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14px; -fx-pref-width: 200; -fx-pref-height: 40; -fx-background-radius: 8;"/>
                </VBox>
            </VBox>

            <!-- Server Configuration Section -->
            <VBox alignment="CENTER" spacing="20"
                  style="-fx-background-color: #34495e; -fx-padding: 25; -fx-background-radius: 15; -fx-min-width: 400;">

                <Label text="ðŸ”§ Server Configuration" style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;"/>

                <!-- Server Management Buttons -->
                <HBox alignment="CENTER" spacing="15">
                    <Button text="ðŸŒ Server Settings" onAction="#onServerConfigClick"
                            style="-fx-background-color: #9b59b6; -fx-text-fill: white; -fx-font-weight: bold; -fx-pref-width: 150; -fx-pref-height: 35; -fx-background-radius: 8;"/>
                    <Button text="ðŸ”„ Test Connection" onAction="#onTestConnectionClick"
                            style="-fx-background-color: #f39c12; -fx-text-fill: white; -fx-font-weight: bold; -fx-pref-width: 150; -fx-pref-height: 35; -fx-background-radius: 8;"/>
                </HBox>

                <!-- Quick Server Options -->
                <VBox spacing="10" alignment="CENTER">
                    <Label text="Quick Server Options" style="-fx-text-fill: #ecf0f1; -fx-font-size: 14px; -fx-font-weight: bold;"/>
                    <HBox alignment="CENTER" spacing="15">
                        <Button text="ðŸ  Localhost" onAction="#onQuickLocalhostClick"
                                style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-pref-width: 120; -fx-pref-height: 30; -fx-background-radius: 6;"/>
                        <Button text="ðŸŒ Network" onAction="#onQuickNetworkClick"
                                style="-fx-background-color: #e67e22; -fx-text-fill: white; -fx-font-weight: bold; -fx-pref-width: 120; -fx-pref-height: 30; -fx-background-radius: 6;"/>
                    </HBox>
                </VBox>

                <!-- Connection Status Guide -->
                <VBox spacing="10" alignment="CENTER">
                    <Label text="ðŸ“Š Status Guide" style="-fx-text-fill: #ecf0f1; -fx-font-size: 14px; -fx-font-weight: bold;"/>
                    <HBox alignment="CENTER" spacing="20">
                        <VBox spacing="3" alignment="CENTER">
                            <Label text="ðŸŸ¢ Connected" style="-fx-text-fill: #27ae60; -fx-font-size: 11px;"/>
                            <Label text="Ready" style="-fx-text-fill: #bdc3c7; -fx-font-size: 9px;"/>
                        </VBox>
                        <VBox spacing="3" alignment="CENTER">
                            <Label text="ðŸŸ¡ Connecting" style="-fx-text-fill: #f39c12; -fx-font-size: 11px;"/>
                            <Label text="Trying" style="-fx-text-fill: #bdc3c7; -fx-font-size: 9px;"/>
                        </VBox>
                        <VBox spacing="3" alignment="CENTER">
                            <Label text="ðŸ”´ Disconnected" style="-fx-text-fill: #e74c3c; -fx-font-size: 11px;"/>
                            <Label text="Offline" style="-fx-text-fill: #bdc3c7; -fx-font-size: 9px;"/>
                        </VBox>
                    </HBox>
                </VBox>
            </VBox>

            <!-- Message Display -->
            <VBox alignment="CENTER" spacing="10" style="-fx-min-width: 400;">
                <Label fx:id="messageLabel" style="-fx-text-fill: #27ae60; -fx-font-weight: bold; -fx-font-size: 13px; -fx-alignment: CENTER; -fx-wrap-text: true; -fx-max-width: 400;"/>
            </VBox>

            <!-- Additional Information -->
            <VBox alignment="CENTER" spacing="5" style="-fx-padding: 20 0 0 0;">
                <Label text="ðŸ”’ Secure Multi-Device Communication" style="-fx-text-fill: #7f8c8d; -fx-font-size: 11px;"/>
                <Label text="Version 1.0.0 | WebSocket Powered" style="-fx-text-fill: #7f8c8d; -fx-font-size: 10px;"/>
            </VBox>
        </VBox>
    </content>
</ScrollPane>