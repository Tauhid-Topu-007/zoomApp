<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.text.*?>

<StackPane xmlns:fx="http://javafx.com/fxml"
           fx:controller="org.example.zoom.LoginController"
           prefWidth="500" prefHeight="600"
           stylesheets="@style.css"
           styleClass="root-pane">

    <!-- Floating Card -->
    <VBox alignment="CENTER" spacing="25" styleClass="card">

        <!-- App Logo -->
        <ImageView fitWidth="100" fitHeight="100">
            <image>
                <Image url="https://i.pinimg.com/736x/05/d2/05/05d205464c8843564b3c6a8873083ea8.jpg"/>
            </image>
        </ImageView>

        <!-- Title -->
        <Label text="Welcome Back!" styleClass="title-label"/>

        <!-- Connection Status -->
        <VBox alignment="CENTER" spacing="5" styleClass="connection-status">
            <Label fx:id="connectionStatusLabel" text="🔴 Not Connected" styleClass="connection-label"/>
            <Label fx:id="serverInfoLabel" text="localhost:8887" styleClass="server-info-label"/>
        </VBox>

        <!-- Username Field -->
        <HBox alignment="CENTER_LEFT" spacing="15">
            <Label text="👤" styleClass="icon-label"/>
            <TextField fx:id="usernameField" promptText="Username" styleClass="input-field"
                       onAction="#onUsernameEnter"/>
        </HBox>

        <!-- Password Field -->
        <HBox alignment="CENTER_LEFT" spacing="15">
            <Label text="🔒" styleClass="icon-label"/>
            <PasswordField fx:id="passwordField" promptText="Password" styleClass="input-field"
                           onAction="#onPasswordEnter"/>
        </HBox>

        <!-- Remember Me & Forgot Password -->
        <HBox alignment="CENTER" spacing="20">
            <CheckBox fx:id="rememberMe" text="Remember Me" styleClass="check-box"
                      onAction="#onRememberMeChanged"/>
            <Button text="Forgot Password?" onAction="#onForgotPasswordClick"
                    styleClass="link-button"/>
        </HBox>

        <!-- Main Action Buttons -->
        <VBox alignment="CENTER" spacing="15">
            <Button text="Login" onAction="#onLoginClick" styleClass="main-button"/>
            <Button text="Register" onAction="#onRegisterClick" styleClass="secondary-button"/>
        </VBox>

        <!-- Server Configuration Section -->
        <VBox alignment="CENTER" spacing="10" styleClass="server-section">
            <Separator styleClass="section-separator"/>
            <Label text="Server Configuration" styleClass="section-label"/>

            <HBox alignment="CENTER" spacing="10">
                <Button text="🌐 Server Settings" onAction="#onServerConfigClick"
                        styleClass="server-button"/>
                <Button text="🔄 Test Connection" onAction="#onTestConnectionClick"
                        styleClass="test-button"/>
            </HBox>

            <!-- Quick Server Options -->
            <HBox alignment="CENTER" spacing="10" styleClass="quick-options">
                <Button text="Localhost" onAction="#onQuickLocalhostClick"
                        styleClass="quick-option-button"/>
                <Button text="Network" onAction="#onQuickNetworkClick"
                        styleClass="quick-option-button"/>
            </HBox>
        </VBox>

        <!-- Message Label -->
        <Label fx:id="messageLabel" styleClass="message-label" wrapText="true"/>
    </VBox>

</StackPane>