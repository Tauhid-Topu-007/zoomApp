<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.zoom.DashboardController"
            prefWidth="900" prefHeight="600"
            style="-fx-background-color: linear-gradient(to right, #2c3e50, #3498db);">

    <!-- Top: Welcome Banner -->
    <top>
        <Label fx:id="welcomeLabel" text="Welcome!"
               style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: white; -fx-padding: 20;"/>
    </top>

    <!-- Center: Zoom Features Grid -->
    <center>
        <GridPane hgap="30" vgap="30" alignment="CENTER">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <!-- Row 1 -->
            <Button text="âž• New Meeting" onAction="#onNewMeetingClick"
                    GridPane.columnIndex="0" GridPane.rowIndex="0"
                    style="-fx-background-color: #e67e22; -fx-text-fill: white; -fx-font-size: 16px;
                           -fx-padding: 25 40; -fx-background-radius: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 10,0,3,3);"/>
            <Button text="ðŸ”— Join" onAction="#onJoinClick"
                    GridPane.columnIndex="1" GridPane.rowIndex="0"
                    style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-size: 16px;
                           -fx-padding: 25 40; -fx-background-radius: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 10,0,3,3);"/>
            <Button text="ðŸ“… Schedule" onAction="#onScheduleClick"
                    GridPane.columnIndex="2" GridPane.rowIndex="0"
                    style="-fx-background-color: #2980b9; -fx-text-fill: white; -fx-font-size: 16px;
                           -fx-padding: 25 40; -fx-background-radius: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 10,0,3,3);"/>
            <Button text="ðŸ–¥ Share Screen" onAction="#onShareScreenClick"
                    GridPane.columnIndex="3" GridPane.rowIndex="0"
                    style="-fx-background-color: #16a085; -fx-text-fill: white; -fx-font-size: 16px;
                           -fx-padding: 25 40; -fx-background-radius: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 10,0,3,3);"/>

            <!-- Row 2 -->
            <Button text="ðŸ‘¥ Contacts" onAction="#onContactsClick"
                    GridPane.columnIndex="0" GridPane.rowIndex="1"
                    style="-fx-background-color: #8e44ad; -fx-text-fill: white; -fx-font-size: 16px;
                           -fx-padding: 25 40; -fx-background-radius: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 10,0,3,3);"/>
            <Button text="ðŸ’¬ Chat" onAction="#onChatClick"
                    GridPane.columnIndex="1" GridPane.rowIndex="1"
                    style="-fx-background-color: #1abc9c; -fx-text-fill: white; -fx-font-size: 16px;
                           -fx-padding: 25 40; -fx-background-radius: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 10,0,3,3);"/>
            <Button text="ðŸŽ¥ Recordings" onAction="#onRecordingsClick"
                    GridPane.columnIndex="2" GridPane.rowIndex="1"
                    style="-fx-background-color: #e84393; -fx-text-fill: white; -fx-font-size: 16px;
                           -fx-padding: 25 40; -fx-background-radius: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 10,0,3,3);"/>
            <Button text="âš™ Settings" onAction="#onSettingsClick"
                    GridPane.columnIndex="3" GridPane.rowIndex="1"
                    style="-fx-background-color: #7f8c8d; -fx-text-fill: white; -fx-font-size: 16px;
                           -fx-padding: 25 40; -fx-background-radius: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 10,0,3,3);"/>

        </GridPane>
    </center>

    <!-- Bottom: Logout -->
    <bottom>
        <Button text="ðŸšª Logout" onAction="#onLogoutClick"
                style="-fx-background-color: #c0392b; -fx-text-fill: white; -fx-font-size: 14px;
                       -fx-padding: 10 20; -fx-background-radius: 8; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 5,0,2,2);"
                BorderPane.alignment="CENTER"/>
    </bottom>
</BorderPane>
