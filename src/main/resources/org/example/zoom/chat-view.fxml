<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.zoom.ChatController"
      prefWidth="800" prefHeight="600"
      style="-fx-background-color: #2c3e50;"
      spacing="10">

    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <!-- Header Section -->
    <HBox spacing="15" alignment="CENTER_LEFT" style="-fx-background-color: #34495e; -fx-padding: 15; -fx-background-radius: 10;">
        <VBox spacing="5">
            <Label text="ðŸ’¬ Meeting Chat" style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold;"/>
            <Label fx:id="userLabel" text="Chatting as: User" style="-fx-text-fill: #bdc3c7; -fx-font-size: 14px;"/>
        </VBox>

        <Region HBox.hgrow="ALWAYS"/>

        <VBox spacing="5" alignment="CENTER_RIGHT">
            <Label fx:id="statusLabel" text="ðŸŸ¢ Connected" style="-fx-text-fill: #27ae60; -fx-font-weight: bold; -fx-font-size: 14px;"/>
            <Label fx:id="connectionInfoLabel" text="localhost:8887" style="-fx-text-fill: #bdc3c7; -fx-font-size: 12px;"/>
        </VBox>
    </HBox>

    <!-- Connection Status Bar -->
    <HBox spacing="10" alignment="CENTER" style="-fx-background-color: #34495e; -fx-padding: 10; -fx-background-radius: 5;">
        <Button text="ðŸ”„ Refresh" onAction="#onRefreshClick"
                style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold;"/>
        <Button text="âš™ Settings" onAction="#onSettingsClick"
                style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-weight: bold;"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button text="ðŸ—‘ Clear Chat" onAction="#onClearClick"
                style="-fx-background-color: #e67e22; -fx-text-fill: white; -fx-font-weight: bold;"/>
        <Button text="â¬… Back" onAction="#onBackClick"
                style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold;"/>
    </HBox>

    <!-- Chat Messages Area -->
    <VBox VBox.vgrow="ALWAYS" style="-fx-background-color: white; -fx-background-radius: 10;">
        <ScrollPane fitToWidth="true" style="-fx-background: white; -fx-padding: 10;">
            <VBox fx:id="chatBox" spacing="10" alignment="TOP_LEFT"/>
        </ScrollPane>
    </VBox>

    <!-- Message Input Area -->
    <HBox spacing="10" alignment="CENTER" style="-fx-background-color: #34495e; -fx-padding: 15; -fx-background-radius: 10;">
        <TextField fx:id="messageField" promptText="Type your message here..."
                   HBox.hgrow="ALWAYS"
                   style="-fx-padding: 12; -fx-font-size: 14px; -fx-background-radius: 8; -fx-border-color: #bdc3c7; -fx-border-radius: 8;"/>
        <Button fx:id="sendButton" text="ðŸ“¤ Send" onAction="#onSendClick"
                style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-background-radius: 8; -fx-padding: 12 20;"/>
        <Button text="ðŸ“Ž File" onAction="#onFileSendClick"
                style="-fx-background-color: #2980b9; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-background-radius: 8; -fx-padding: 12 20;"/>
    </HBox>

</VBox>