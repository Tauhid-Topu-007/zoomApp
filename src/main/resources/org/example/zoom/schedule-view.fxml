<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.zoom.ScheduleController"
            prefWidth="700" prefHeight="500"
            style="-fx-background-color: #f4f6f9;">

    <!-- Title Bar -->
    <top>
        <Label text="Meeting Schedule"
               style="-fx-background-color: #2c3e50; -fx-text-fill: white;
                      -fx-font-size: 20px; -fx-font-weight: bold; -fx-padding: 10;"
               maxWidth="Infinity"/>
    </top>

    <!-- Table View -->
    <center>
        <TableView fx:id="scheduleTable" prefHeight="300" style="-fx-font-size: 14px;">
            <columns>
                <TableColumn fx:id="titleColumn" text="Meeting Title" prefWidth="250"/>
                <TableColumn fx:id="dateColumn" text="Date" prefWidth="200"/>
                <TableColumn fx:id="timeColumn" text="Time" prefWidth="150"/>
            </columns>
        </TableView>
    </center>

    <!-- Input Section -->
    <bottom>
        <VBox spacing="10" style="-fx-padding: 15; -fx-background-color: #ecf0f1;">
            <HBox spacing="10">
                <TextField fx:id="meetingTitleField" promptText="Meeting Title"
                           style="-fx-padding: 10; -fx-font-size: 14px; -fx-background-radius: 8;"
                           HBox.hgrow="ALWAYS"/>
                <DatePicker fx:id="meetingDatePicker" style="-fx-font-size: 14px;"/>
                <TextField fx:id="meetingTimeField" promptText="HH:MM"
                           style="-fx-padding: 10; -fx-font-size: 14px; -fx-background-radius: 8;"/>
                <Button text="Add" onAction="#onAddMeetingClick"
                        style="-fx-background-color: #27ae60; -fx-text-fill: white;
                               -fx-font-size: 14px; -fx-background-radius: 8; -fx-padding: 10 20;"/>
            </HBox>

            <HBox spacing="10">
                <Button text="Cancel Selected Meeting" onAction="#onCancelClick"
                        style="-fx-background-color: #c0392b; -fx-text-fill: white;
                               -fx-font-size: 14px; -fx-background-radius: 8; -fx-padding: 10 20;"/>
                <Button text="Back to Dashboard" onAction="#onBackClick"
                        style="-fx-background-color: #e74c3c; -fx-text-fill: white;
                               -fx-font-size: 14px; -fx-background-radius: 8; -fx-padding: 10 20;"/>
            </HBox>
        </VBox>
    </bottom>

</BorderPane>
