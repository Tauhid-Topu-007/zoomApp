<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.zoom.ScheduleController"
            prefWidth="900" prefHeight="700"
            style="-fx-background-color: #f8f9fa;">

    <!-- Title Bar -->
    <top>
        <VBox spacing="10" style="-fx-background-color: #2c3e50; -fx-padding: 15;">
            <HBox alignment="CENTER_LEFT" spacing="15">
                <Label text="📅 Meeting Scheduler"
                       style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold;"/>
                <Pane HBox.hgrow="ALWAYS"/>
                <Button text="⚡ Quick Meeting" onAction="#onQuickMeetingClick"
                        style="-fx-background-color: #9b59b6; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8; -fx-padding: 8 15;"/>
                <Button text="📤 Export" onAction="#onExportClick"
                        style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8; -fx-padding: 8 15;"/>
            </HBox>

            <!-- Search Bar -->
            <HBox spacing="10" alignment="CENTER_LEFT">
                <TextField fx:id="searchField" promptText="Search meetings..."
                           style="-fx-background-radius: 20; -fx-padding: 8 15; -fx-pref-width: 300;"/>
                <Label text="🔍" style="-fx-text-fill: white; -fx-font-size: 16px;"/>
            </HBox>
        </VBox>
    </top>

    <!-- Table View -->
    <center>
        <VBox spacing="10" style="-fx-padding: 20;">
            <Label text="Scheduled Meetings"
                   style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

            <TableView fx:id="scheduleTable" prefHeight="400" style="-fx-font-size: 14px; -fx-background-radius: 8;">
                <columns>
                    <TableColumn fx:id="titleColumn" text="Meeting Title" prefWidth="250"/>
                    <TableColumn fx:id="dateColumn" text="Date" prefWidth="120"/>
                    <TableColumn fx:id="timeColumn" text="Time" prefWidth="100"/>
                    <TableColumn fx:id="statusColumn" text="Status" prefWidth="120"/>
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
            </TableView>
        </VBox>
    </center>

    <!-- Input Section -->
    <bottom>
        <VBox spacing="15" style="-fx-padding: 20; -fx-background-color: #ecf0f1;">
            <!-- Form Title -->
            <Label text="Schedule New Meeting"
                   style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

            <!-- Input Fields -->
            <VBox spacing="10" style="-fx-padding: 15; -fx-background-color: white; -fx-background-radius: 8;">
                <HBox spacing="15" alignment="CENTER_LEFT">
                    <VBox spacing="5" prefWidth="300">
                        <Label text="Meeting Title *" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                        <TextField fx:id="meetingTitleField" promptText="Enter meeting title"
                                   style="-fx-background-radius: 5; -fx-padding: 8;"/>
                    </VBox>

                    <VBox spacing="5">
                        <Label text="Date *" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                        <DatePicker fx:id="meetingDatePicker" style="-fx-pref-width: 150;"/>
                    </VBox>

                    <VBox spacing="5">
                        <Label text="Time *" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                        <TextField fx:id="meetingTimeField" promptText="HH:MM"
                                   style="-fx-background-radius: 5; -fx-padding: 8; -fx-pref-width: 80;"/>
                    </VBox>
                </HBox>

                <VBox spacing="5">
                    <Label text="Description" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                    <TextArea fx:id="meetingDescriptionField" promptText="Meeting description (optional)"
                              style="-fx-background-radius: 5; -fx-padding: 8; -fx-pref-height: 60;"/>
                </VBox>
            </VBox>

            <!-- Action Buttons -->
            <HBox spacing="10" alignment="CENTER">
                <Button fx:id="addButton" text="➕ Add Meeting" onAction="#onAddMeetingClick"
                        style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8; -fx-padding: 10 20;"/>
                <Button fx:id="editButton" text="✏️ Edit Selected" onAction="#onEditMeetingClick"
                        style="-fx-background-color: #f39c12; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8; -fx-padding: 10 20;"/>
                <Button fx:id="cancelButton" text="❌ Cancel Selected" onAction="#onCancelClick"
                        style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8; -fx-padding: 10 20;"/>
                <Button fx:id="startNowButton" text="🎬 Start Meeting" onAction="#onStartNowClick"
                        style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8; -fx-padding: 10 20;"/>
                <Button text="🧹 Clear Form" onAction="#onClearFormClick"
                        style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8; -fx-padding: 10 20;"/>
                <Pane HBox.hgrow="ALWAYS"/>
                <Button text="← Back to Dashboard" onAction="#onBackClick"
                        style="-fx-background-color: #7f8c8d; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8; -fx-padding: 10 20;"/>
            </HBox>
        </VBox>
    </bottom>
</BorderPane>