<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.zoom.ContactController"
            prefWidth="700" prefHeight="500"
            style="-fx-background-color: #f5f6fa;">

    <top>
        <VBox spacing="10" style="-fx-padding: 20;">
            <HBox alignment="CENTER_LEFT" spacing="15">
                <Button text="â† Back" onAction="#onBackClick"
                        style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold;"/>
                <Label text="ðŸ“’ Contact Manager"
                       style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
            </HBox>
            <Label text="Manage your contacts"
                   style="-fx-text-fill: #7f8c8d; -fx-font-size: 14px;"/>
        </VBox>
    </top>

    <center>
        <VBox spacing="15" style="-fx-padding: 20;">
            <!-- Contact List -->
            <Label text="Your Contacts:"
                   style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
            <ListView fx:id="contactList" prefHeight="250" prefWidth="650"
                      style="-fx-border-color: #bdc3c7; -fx-border-radius: 5; -fx-background-radius: 5;"/>

            <!-- Contact Form -->
            <Label text="Add/Edit Contact:"
                   style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2c3e50; -fx-padding: 10 0 0 0;"/>
            <HBox spacing="15" alignment="CENTER_LEFT">
                <VBox spacing="5">
                    <Label text="Name *" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                    <TextField fx:id="nameField" promptText="Full Name"
                               prefWidth="200" prefHeight="35"
                               style="-fx-background-radius: 5; -fx-border-radius: 5;"/>
                </VBox>
                <VBox spacing="5">
                    <Label text="Email" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                    <TextField fx:id="emailField" promptText="email@example.com"
                               prefWidth="200" prefHeight="35"
                               style="-fx-background-radius: 5; -fx-border-radius: 5;"/>
                </VBox>
                <VBox spacing="5">
                    <Label text="Phone" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                    <TextField fx:id="phoneField" promptText="Phone Number"
                               prefWidth="150" prefHeight="35"
                               style="-fx-background-radius: 5; -fx-border-radius: 5;"/>
                </VBox>
            </HBox>
        </VBox>
    </center>

    <bottom>
        <VBox spacing="10" style="-fx-padding: 20; -fx-background-color: #ecf0f1;">
            <HBox spacing="15" alignment="CENTER">
                <Button text="âž• Add Contact" onAction="#onAddClick"
                        style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-pref-width: 120; -fx-pref-height: 35; -fx-background-radius: 5;"/>
                <Button text="âœï¸ Update Contact" onAction="#onUpdateClick"
                        style="-fx-background-color: #f39c12; -fx-text-fill: white; -fx-font-weight: bold; -fx-pref-width: 120; -fx-pref-height: 35; -fx-background-radius: 5;"/>
                <Button text="ðŸ—‘ï¸ Delete Contact" onAction="#onDeleteClick"
                        style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold; -fx-pref-width: 120; -fx-pref-height: 35; -fx-background-radius: 5;"/>
                <Button text="ðŸ§¹ Clear" onAction="#onClearClick"
                        style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-weight: bold; -fx-pref-width: 80; -fx-pref-height: 35; -fx-background-radius: 5;"/>
            </HBox>
            <Label text="* Click on a contact to edit, then use Update button"
                   style="-fx-text-fill: #7f8c8d; -fx-font-size: 12px; -fx-alignment: center;"/>
        </VBox>
    </bottom>
</BorderPane>