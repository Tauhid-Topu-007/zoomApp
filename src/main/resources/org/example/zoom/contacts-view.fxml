<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<ScrollPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.zoom.ContactController"
            fx:id="mainScrollPane"
            style="-fx-background: #2c3e50; -fx-border-color: #2c3e50;"
            fitToWidth="true" fitToHeight="true"
            hbarPolicy="NEVER" vbarPolicy="AS_NEEDED">

    <content>
        <VBox spacing="20" alignment="TOP_CENTER"
              style="-fx-background-color: #2c3e50; -fx-padding: 25; -fx-min-width: 700;">

            <!-- Header -->
            <HBox alignment="CENTER_LEFT" spacing="15" style="-fx-padding: 0 0 10 0;">
                <Button text="â† Back" onAction="#onBackClick"
                        style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5; -fx-padding: 8 15;"/>
                <VBox>
                    <Label text="ðŸ‘¥ Contacts" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: white;"/>
                    <Label text="Manage your contact list" style="-fx-text-fill: #bdc3c7; -fx-font-size: 12px;"/>
                </VBox>
            </HBox>

            <!-- Contact List -->
            <VBox spacing="10" style="-fx-background-color: #34495e; -fx-padding: 20; -fx-background-radius: 10;">
                <Label text="Contact List" style="-fx-text-fill: white; -fx-font-weight: bold;"/>
                <ListView fx:id="contactList" prefHeight="200" prefWidth="650"
                          style="-fx-background-color: #2c3e50; -fx-border-color: #4a6572; -fx-border-radius: 5; -fx-background-radius: 5; -fx-text-fill: white;"/>
            </VBox>

            <!-- Contact Form -->
            <VBox spacing="15" style="-fx-background-color: #34495e; -fx-padding: 20; -fx-background-radius: 10;">
                <Label text="Contact Details" style="-fx-text-fill: white; -fx-font-weight: bold;"/>
                <HBox spacing="15" alignment="CENTER_LEFT">
                    <TextField fx:id="nameField" promptText="Name" prefWidth="180"
                               style="-fx-background-color: #2c3e50; -fx-text-fill: white; -fx-prompt-text-fill: #95a5a6; -fx-border-color: #4a6572; -fx-border-radius: 5;"/>
                    <TextField fx:id="emailField" promptText="Email" prefWidth="180"
                               style="-fx-background-color: #2c3e50; -fx-text-fill: white; -fx-prompt-text-fill: #95a5a6; -fx-border-color: #4a6572; -fx-border-radius: 5;"/>
                    <TextField fx:id="phoneField" promptText="Phone" prefWidth="150"
                               style="-fx-background-color: #2c3e50; -fx-text-fill: white; -fx-prompt-text-fill: #95a5a6; -fx-border-color: #4a6572; -fx-border-radius: 5;"/>
                </HBox>
            </VBox>

            <!-- Action Buttons -->
            <HBox spacing="15" alignment="CENTER" style="-fx-background-color: #34495e; -fx-padding: 20; -fx-background-radius: 10;">
                <Button text="âž• Add" onAction="#onAddClick"
                        style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-pref-width: 100; -fx-background-radius: 5;"/>
                <Button text="âœï¸ Update" onAction="#onUpdateClick"
                        style="-fx-background-color: #f39c12; -fx-text-fill: white; -fx-font-weight: bold; -fx-pref-width: 100; -fx-background-radius: 5;"/>
                <Button text="ðŸ—‘ï¸ Delete" onAction="#onDeleteClick"
                        style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold; -fx-pref-width: 100; -fx-background-radius: 5;"/>
                <Button text="ðŸ§¹ Clear" onAction="#onClearClick"
                        style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-weight: bold; -fx-pref-width: 80; -fx-background-radius: 5;"/>
            </HBox>

            <!-- Instructions -->
            <Label text="* Click on a contact to edit, then use Update button"
                   style="-fx-text-fill: #bdc3c7; -fx-font-size: 11px; -fx-alignment: center;"/>

        </VBox>
    </content>
</ScrollPane>