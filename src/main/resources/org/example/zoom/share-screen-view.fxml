<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.zoom.ShareScreenController"
            style="-fx-background-color: #f4f6f9;">

    <!-- Top Bar -->
    <top>
        <Label text="ðŸ“º Screen Sharing"
               style="-fx-background-color: #2c3e50; -fx-text-fill: white;
                      -fx-font-size: 18px; -fx-font-weight: bold; -fx-padding: 10;"
               maxWidth="Infinity"/>
    </top>

    <!-- Center: Screen View -->
    <center>
        <StackPane style="-fx-background-color: black;">
            <ImageView fx:id="screenView"
                       preserveRatio="true"
                       fitWidth="900"
                       fitHeight="500"/>
        </StackPane>
    </center>

    <!-- Bottom Controls -->
    <bottom>
        <HBox spacing="15" alignment="CENTER"
              style="-fx-padding: 15; -fx-background-color: #ecf0f1;">
            <Button text="Start Sharing" onAction="#onStartShareClick"
                    style="-fx-background-color: #27ae60; -fx-text-fill: white;
                           -fx-font-size: 14px; -fx-background-radius: 8;"/>
            <Button text="Stop Sharing" onAction="#onStopShareClick"
                    style="-fx-background-color: #e67e22; -fx-text-fill: white;
                           -fx-font-size: 14px; -fx-background-radius: 8;"/>
            <Button text="Back" onAction="#onBackClick"
                    style="-fx-background-color: #e74c3c; -fx-text-fill: white;
                           -fx-font-size: 14px; -fx-background-radius: 8;"/>
        </HBox>
    </bottom>
</BorderPane>
